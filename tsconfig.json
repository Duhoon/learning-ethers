{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
    },
    "target": "ESNext",
    "module": "commonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "dist"
  }
}
